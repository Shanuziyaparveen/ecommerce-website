    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center mb-20" style="margin-right: 200px;">
 
 
            <% for (let i = 1; i <= totalPages; i++) { %>
            <li class="page-item <%=(i === currentPage) ? 'active' : '' %>">
                <a class="page-link" href="?page=<%= i %>"><%= i %></a>
            </li>
            <% } %>
 
 
        </ul>
    </nav>
 </div>
 
 

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10/dist/sweetalert2.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

<script>

function confirmBlock(url) {
        // Display SweetAlert confirmation dialog
        Swal.fire({
            title: 'Are you sure?',
            text: 'Do you want to change the status of this product?',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, proceed!',
            cancelButtonText: 'Cancel'
        }).then((result) => {
            if (result.isConfirmed) {
                // If confirmed, redirect to the URL
                window.location.href = url;
            }
        });
    }
async function addOffer(productId, category) {
    console.log("Product ID:", productId, "Category:", category); // Debugging

    if (!productId || !category) {
        Swal.fire('Error', 'Invalid product or category.', 'error');
        return;
    }

    const { value: amount } = await Swal.fire({
        title: 'Offer in percentage',
        input: 'number',
        inputLabel: 'Percentage',
        inputPlaceholder: '%',
        inputValidator: (value) => {
            if (!value || value < 0 || value > 100) {
                return 'Please enter a valid percentage between 0 and 100';
            }
        }
    });

    if (amount) {
        $.ajax({
            url: "/admin/addProductOffer",
            method: 'POST',
            data: {
                percentage: amount,
                productId: productId,
                category: category
            },
            success: (response) => {
                if (response.status === true) {
                    location.reload();
                    Swal.fire('Offer Added', 'The offer has been added successfully.', 'success');
                } else {
                    Swal.fire('Failed', response.message, 'error');
                }
            },
            error: (err) => {
                console.error(err);
                Swal.fire('Error', 'An unexpected error occurred.', 'error');
            }
        });
    }
}
function removeOffer(productId) {
    try {
        Swal.fire({
            title: 'Remove Offer',
            text: 'Are you sure you want to remove this offer?',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, remove it!',
            timer: 5000,
            timerProgressBar: true,
        }).then(async (result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: "/admin/removeProductOffer",
                    method: 'POST',
                    data: {
                        productId: productId // ensure this ID is valid
                    },
                    success: (response) => {
                        if (response.status === true) {
                            location.reload();
                            Swal.fire(
                                'Offer Removed',
                                'The offer has been removed successfully.',
                                'success'
                            );
                        } else {
                            Swal.fire(
                                'Failed',
                                'Could not remove the offer.',
                                'error'
                            );
                        }
                    },
                    error: (err) => {
                        console.error(err);
                        Swal.fire(
                            'Error',
                            'An error occurred while removing the offer.',
                            'error'
                        );
                    }
                });
            }
        });
    } catch (error) {
        console.error(error);
        Swal.fire(
            'Error',
            'An unexpected error occurred.',
            'error'
        );
    }
}


</script>
