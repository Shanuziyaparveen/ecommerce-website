<!DOCTYPE html>
<%- include("../../views/partials/admin/header") %>

<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Order List</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f7f8fa;
      color: #333;
      margin: 0;
      padding: 0;
    }

    /* Navbar Styles */
    .navbar {
      background-color: #6a4793;
      color: #fff;
      padding: 10px 20px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .navbar a {
      color: #fff;
      text-decoration: none;
      margin: 0 10px;
      font-weight: bold;
    }

    .navbar a:hover {
      text-decoration: underline;
    }

    .container {
      max-width: 1200px;
      margin: 20px auto;
      padding: 20px;
    }

    h1 {
      text-align: center;
      margin-bottom: 20px;
      color: #6a4793;
      font-size: 28px;
      font-weight: bold;
    }

    .order-list {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 20px;
    }

    .card {
      background-color: #fff;
      border-radius: 8px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      padding: 15px;
      transition: box-shadow 0.3s ease;
    }

    .card:hover {
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    }

    .card-header {
      font-size: 1.2em;
      font-weight: bold;
      margin-bottom: 10px;
      color: #6a4793;
    }

    .card-body p {
      margin: 5px 0;
      font-size: 14px;
    }

    .card-body p strong {
      color: #333;
    }

    .btn {
      display: inline-block;
      background-color: #6a4793;
      color: #fff;
      text-decoration: none;
      padding: 10px 15px;
      border-radius: 5px;
      font-weight: bold;
      transition: background-color 0.3s ease;
    }

    .btn:hover {
      background-color: #5a3a7a;
    }

    .no-orders {
      text-align: center;
      font-size: 16px;
      color: #666;
      padding: 20px;
      background-color: #fff;
      border-radius: 8px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .pagination {
      display: flex;
      justify-content: center;
      margin-top: 20px;
    }

    .pagination a {
      margin: 0 5px;
      padding: 8px 12px;
      background-color: #6a4793;
      color: #fff;
      border-radius: 4px;
      text-decoration: none;
      font-size: 14px;
      font-weight: bold;
    }

    .pagination a:hover {
      background-color: #5a3a7a;
    }

    .pagination a.disabled, .pagination a.active {
      background-color: #ccc;
      color: #666;
      pointer-events: none;
    }

    @media (max-width: 768px) {
      .navbar {
        flex-direction: column;
        align-items: flex-start;
      }

      .order-list {
        grid-template-columns: 1fr;
      }

      h1 {
        font-size: 22px;
      }
    }
  </style>
</head>
<body>
  <div class="navbar">
    <a href="/admin/">Admin Home</a>
    <a href="/logout">Logout</a>
  </div>

  <div class="container">
    <h1>Admin Order List</h1>

    <div class="order-list">
      <% if (orders && orders.length > 0) { %>
        <% orders.forEach((order) => { %>
          <% if (order.status !== 'Payment Pending') { %>
          <div class="card">
            <div class="card-header">
              Order ID: <%= order.orderId %>
            </div>
            <div class="card-body">
              <p><strong>First Product:</strong> <%= order.orderedItems[0]?.product?.productName || 'Unnamed Product' %></p>
              <p><strong>and</strong> <%= order.orderedItems.length %> others</p>
              <p><strong>Order Total:</strong> â‚¹<%= order.finalAmount %></p>
              <p><strong>Status:</strong> <%= order.displayStatus %></p>
              <a href="/admin/orderDetails/<%= order._id %>" class="btn">View Details</a>
            </div>
          </div>
          <% } %>
        <% }) %>
      <% } else { %>
        <div class="no-orders">
          <p>No orders to display.</p>
        </div>
      <% } %>
    </div>

    <div class="pagination">
      <% if (totalPages > 1) { %>
        <% if (currentPage > 1) { %>
          <a href="?page=<%= currentPage - 1 %>">Previous</a>
        <% } else { %>
          <a class="disabled">Previous</a>
        <% } %>

        <% for (let i = 1; i <= totalPages; i++) { %>
          <a href="?page=<%= i %>" class="<%= currentPage === i ? 'active' : '' %>"><%= i %></a>
        <% } %>

        <% if (currentPage < totalPages) { %>
          <a href="?page=<%= currentPage + 1 %>">Next</a>
        <% } else { %>
          <a class="disabled">Next</a>
        <% } %>
      <% } %>
    </div>
  </div>
</body>
</html>
